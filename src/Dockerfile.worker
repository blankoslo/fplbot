FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build-env
WORKDIR /app
COPY . .
RUN dotnet restore Fpl.Workers.Console/Fpl.Workers.Console.csproj

ARG INFOVERSION="0.666"
ARG VERSION="1.0.666"
RUN echo "Infoversion: $INFOVERSION"
RUN dotnet publish Fpl.Workers.Console/Fpl.Workers.Console.csproj -o /app/fplbot-worker -c Release /p:Version=$VERSION /p:InformationalVersion=$INFOVERSION

FROM mcr.microsoft.com/dotnet/runtime:6.0
WORKDIR /worker
COPY --from=build-env /app/fplbot-worker .
ENTRYPOINT ["dotnet", "Fpl.Workers.Console.dll"]
